/**index.wxss**/
.header{
  width: 100%;
  height: 138rpx;
  border-bottom: 6rpx solid #262626;
  box-sizing: border-box;
  position: relative;
  padding-top: 34rpx;
}
.btn-region{
  color: #262626;
  font-size: 36rpx;
  height: 138rpx;
  width: 115rpx; 
  line-height: 138rpx; 
  position: absolute;
  left: 600rpx;
  top:0;
}
.btn-region .ico{
  width: 26rpx;
  height: 13rpx;
  float: right;
  margin-top: 67rpx;
}
.btn-phone{
  color: #262626;
  font-size: 36rpx;
  height: 138rpx;
  width: 75rpx; 
  line-height: 138rpx; 
  position: absolute;
  left: 3rpx;
  top:0;
}
.btn-phone .ico{
  width: 48rpx;
  height: 48rpx;
  float: right;
  margin-top: 48rpx;
}
.logo{
  width: 170rpx;
  height: 78rpx;
  display: block;
  margin: 0 auto;
}
.my-swiper{
  width: 100%;
  height: 370rpx;
}
.my-swiper image,
.my-swiper swiper{
   width: 100%; 
   height: 370rpx; 
}
.nav{
  /* width: 100%; */
  height: 625rpx;
  padding: 33rpx;
}
.btn-nav{
  float: left;
  width: 295rpx;
  height: 255rpx;
  box-shadow: 0 0 6rpx #ccc;
  margin: 24rpx;
  position: relative;
}
.btn-nav image{
  width: 110rpx;
  height: 100rpx;
  display: block;
  margin: 43rpx auto 30rpx;
}
.btn-nav text{
  font-size: 28rpx;
  color:#262626;
  text-align: center;
  display: block;
}

/**index.wxss**/
.container {
  padding: 10px 0px;
  background-color: #F2f2f2;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 32rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
}
.info {
  margin-top: 50px;
  text-align: center;
}