/* pages/entry/entry.wxss */
.tit-box{
  height: 205rpx;
  width: 750rpx;
  padding-top: 40rpx;
  box-sizing: border-box;
}
.tit-box image{
  width: 373rpx;
  height: 130rpx;
  margin: 0 auto;
  display: block;
}
.video-box{
  width: 100%;
  height:388rpx;
}
.video-box video{
  width: 674rpx;
  height:388rpx;
  display: block;
  margin: 0 auto;
}
.word-text{
  font-size: 26rpx;
  color: #000;
  line-height: 37rpx;
  text-align: center;
  font-weight: bold;
  display: block;
  margin: 40rpx auto 43rpx;
  padding: 0 37rpx;
}
.br{
  height: 6rpx;
  width: 100%;
  background: #262626;
}
.ad{
  width: 100%;
  height: 241rpx;
  display: block;
}
.taobao{
  box-sizing: border-box;
  width: 100%;
  height: 145rpx;
  border-top: 1px solid #262626;
  padding: 39rpx 30rpx;
}
.taobao image{
  width: 223rpx;
  height: 68rpx;
  display: inline-block;
  float: left;
}
.taobao text{
  height: 68rpx;
  line-height: 68rpx;
  color: #262626;
  font-size: 22rpx;
  float: left;
  font-weight: bold;
}
.btn-bay{
  width: 152rpx;
  height: 59rpx;
  line-height: 59rpx;
  color: #fff;
  background-color: #fd4513;
  display: inline-block;
  font-size: 26rpx;
  float: left;
  margin: 4rpx 0 0 55rpx;
  text-align: center;
}